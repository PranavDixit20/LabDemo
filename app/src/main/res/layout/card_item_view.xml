<?xml version="1.0" encoding="utf-8"?>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardCornerRadius="7dp"
        android:layout_marginTop="@dimen/cardview_compat_inset_shadow"
        android:elevation="4dp"
        android:padding="4dp"
        card_view:cardBackgroundColor="#FFFF99">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:textColor="#000"
                    android:gravity="center_vertical"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/b_id"/>

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:text="In Search of Lost Time"
                    android:gravity="center_vertical"
                    android:textSize="15dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/b_name"
                    android:layout_toRightOf="@+id/b_id"/>

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:text="10"
                    android:gravity="center_vertical"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/b_qut"
                    android:layout_toRightOf="@id/b_name"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="avaliable"
                    android:gravity="center_vertical"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/b_status"
                    android:layout_toRightOf="@id/b_qut"/>

            </RelativeLayout>
    </android.support.v7.widget.CardView>
