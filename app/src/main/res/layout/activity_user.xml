<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbarfile" android:id="@+id/tbar"/>

    <TabHost
        android:id="@+id/tabhost"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#d6fd65"/>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/Home"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="#000">

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape">

                            <TextView
                                android:layout_width="20dp"
                                android:layout_height="50dp"
                                android:text="No"
                                android:textColor="#000"
                                android:gravity="center"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:layout_marginLeft="5dp"
                                android:id="@+id/b_id"/>

                            <TextView
                                android:layout_width="160dp"
                                android:layout_height="50dp"
                                android:text="Book_Name"
                                android:gravity="center"
                                android:textSize="15dp"
                                android:textColor="#000"
                                android:textStyle="bold"
                                android:layout_marginLeft="15dp"
                                android:id="@+id/b_name"
                                android:layout_toRightOf="@+id/b_id"/>

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:text="Qunt"
                                android:gravity="center"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:textColor="#000"
                                android:layout_marginLeft="15dp"
                                android:id="@+id/b_qut"
                                android:layout_toRightOf="@id/b_name"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:text="Status"
                                android:gravity="center"
                                android:textSize="15dp"
                                android:textColor="#000"
                                android:textStyle="bold"
                                android:layout_marginLeft="15dp"
                                android:id="@+id/b_status"
                                android:layout_toRightOf="@id/b_qut"/>

                        </RelativeLayout>



                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_view"
                        android:scrollbars="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/Info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape">


                        <TextView
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:text="Book Name"
                            android:gravity="center"
                            android:textSize="15dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:layout_marginLeft="1dp"
                            android:id="@+id/b_n" />

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="Assign Date"
                            android:gravity="center"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:layout_marginLeft="5dp"
                            android:id="@+id/b_as"
                            android:layout_toRightOf="@id/b_n"/>

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="Due Date"
                            android:textColor="#000"
                            android:gravity="center"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:layout_marginLeft="15dp"
                            android:id="@+id/b_du"
                            android:layout_toRightOf="@id/b_as"/>

                    </RelativeLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_view_info"
                        android:scrollbars="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Cart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="This is Cart" />

                </LinearLayout>


            </FrameLayout>
        </LinearLayout>
    </TabHost>
</LinearLayout>