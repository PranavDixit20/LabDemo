<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="7dp"
    android:layout_marginTop="5dp"
    android:elevation="4dp"
    android:padding="4dp"
    card_view:cardBackgroundColor="#FFFF99">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/b_nm"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_marginLeft="1dp"
            android:gravity="center"
            android:text="In Search of Lost Time"
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/b_nm"
            android:gravity="center"
            android:text="Return"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/b_ass"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/b_nm"
            android:layout_marginLeft="25dp"
            android:gravity="center"
            android:text="5/5/2017"
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/b_due"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/b_nm"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/b_ass"
            android:gravity="center"
            android:text="10/10/2017"
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/renew"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/b_nm"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/b_due"
            android:gravity="center"
            android:text="10/10/2017"
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
